<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivMiddle"
            android:layout_width="match_parent"
            android:layout_height="64sp"
            android:background="#4F9E59"
            android:paddingBottom="3dp"
            android:src="@drawable/logo_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter first string"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:id="@+id/lcs_tv1"/>

        <EditText
            android:id="@+id/firstString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="85dp"
            android:hint="Ex: ABCDEF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter second string"
            android:layout_alignLeft="@id/lcs_tv1"
            android:textSize="18sp"
            android:layout_marginTop="150dp" />

        <EditText
            android:id="@+id/secondString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ex: ABCD"
            android:layout_alignLeft="@id/firstString"
            android:layout_marginTop="133dp"/>

        <Button
            android:id="@+id/lcsSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/custom_button4"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/printLCS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lcs_tv1"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="130dp"/>

        <TextView
            android:id="@+id/tableLCS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lcs_tv1"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:id="@+id/seq1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lcs_tv1"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/seq2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lcs_tv1"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="70dp"/>


</RelativeLayout>