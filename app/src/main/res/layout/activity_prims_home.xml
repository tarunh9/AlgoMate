<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myVertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    tools:context=".Prims_home">

    <ImageView
        android:id="@+id/ivMiddle"
        android:layout_width="match_parent"
        android:layout_height="64sp"
        android:background="#4F9E59"
        android:paddingBottom="3dp"
        android:src="@drawable/logo_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter matrix :"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter adjacency matrix"
        android:id="@+id/adjmat"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="140dp"
        android:inputType="phone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_prims"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="120dp"
        android:layout_gravity="center_horizontal"
        android:text="Submit"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/custom_button2"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"/>


</RelativeLayout>