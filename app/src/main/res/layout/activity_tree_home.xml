<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myVertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    tools:context=".Bubble">

    <ImageView
        android:id="@+id/ivMiddle"
        android:layout_width="match_parent"
        android:layout_height="64sp"
        android:background="#4F9E59"
        android:paddingBottom="3dp"
        android:src="@drawable/logo_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:text="Trees"
        android:textSize="30sp"
        android:id="@+id/tree_head"/>

    <Button
        android:id="@+id/button_bst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button1"
        android:layout_below="@id/tree_head"
        android:paddingLeft="40dp"
        android:paddingTop="10dp"
        android:paddingRight="40dp"
        android:paddingBottom="10dp"
        android:text="Binary Search \nTree"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_alignLeft="@id/button_bst"
        android:layout_alignRight="@id/button_bst"
        android:layout_below="@id/button_bst"
        android:background="@drawable/custom_button1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Binary Tree"
        android:textColor="#FFFFFF" />


</RelativeLayout>